<div class="col-sm-3">
  <div class="card hvr-round-corners hvr-underline-reveal">
    <%= image_tag(food_item.image_url_or_default, alt: food_item.name, class: 'card-img img-responsive img-thumbnail') %>
    <div class="card-block">
      <h4 class="card-title"><%= link_to food_item.name, food_item_path(food_item) %></h4>
      <p class="card-text"><%= food_item.description %></p>
      <p class="card-text"><small class="text-muted"><%= time_ago_in_words(food_item.created_at) %> ago</small></p>
    </div>
  </div>
</div>